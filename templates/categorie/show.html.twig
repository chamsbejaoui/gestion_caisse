{% extends 'base.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
                        <h1 class="h4 mb-0">
                            <i class="fas fa-tag me-2"></i>Détails de la Catégorie #{{ categorie.id }}
                        </h1>
                        <a href="{{ path('app_categorie_index') }}" class="btn btn-light">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                    </div>

                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-4">
                                    <h5 class="text-muted mb-2">Nom de la Catégorie</h5>
                                    <span class="badge bg-info fs-5">{{ categorie.nom }}</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light py-3 d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Modifier
                        </a>
                        {{ include('categorie/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
