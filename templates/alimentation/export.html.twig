{% extends 'base.html.twig' %}

{% block title %}Exporter les alimentations{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white py-3">
                <h1 class="h4 mb-0"><i class="fas fa-file-export me-2"></i>Exporter les alimentations</h1>
            </div>

            <div class="card-body">
                {{ form_start(exportForm, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">PÃ©riode d'exportation</h5>
                                    {{ form_row(exportForm.exportAll) }}
                                    
                                    <div id="dateRange" class="mt-3">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                {{ form_row(exportForm.dateMin) }}
                                            </div>
                                            <div class="col-md-6">
                                                {{ form_row(exportForm.dateMax) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title mb-3">Format d'exportation</h5>
                                    {{ form_row(exportForm.format) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_alimentation_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-file-export me-2"></i>Exporter
                        </button>
                    </div>
                {{ form_end(exportForm) }}
            </div>
        </div>
    </div>

    {% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const exportAllChoices = document.querySelectorAll('input[name="export_options[exportAll]"]');
            const dateRange = document.getElementById('dateRange');

            function toggleDateRange() {
                const selectedValue = document.querySelector('input[name="export_options[exportAll]"]:checked').value;
                dateRange.style.display = selectedValue === '0' ? 'block' : 'none';
            }

            exportAllChoices.forEach(choice => {
                choice.addEventListener('change', toggleDateRange);
            });

            toggleDateRange();
        });
    </script>
    {% endblock %}
{% endblock %}
