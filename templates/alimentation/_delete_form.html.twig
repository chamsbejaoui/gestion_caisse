<form method="post" action="{{ path('app_alimentation_delete', {'id': alimentation.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette alimentation ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ alimentation.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt me-2"></i>Supprimer
    </button>
</form>
