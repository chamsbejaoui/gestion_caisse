{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur (Copie){% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white py-3">
                <h1 class="h4 mb-0"><i class="fas fa-user-edit me-2"></i>Modifier l'utilisateur</h1>
            </div>
            <div class="card-body p-4">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="row g-3">
                        <div class="col-12">
                            {{ form_row(form.email, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'Adresse email'
                                },
                                'label_attr': {
                                    'class': 'form-label fw-bold'
                                },
                                'help': 'L\'adresse email servira d\'identifiant de connexion'
                            }) }}
                        </div>

                        <div class="col-12">
                            {{ form_row(form.plainPassword, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'Mot de passe'
                                },
                                'label_attr': {
                                    'class': 'form-label fw-bold'
                                },
                                'help': 'Le mot de passe doit contenir au moins 6 caractères avec au moins une minuscule, une majuscule et un chiffre'
                            }) }}
                        </div>

                        <div class="col-12">
                            {{ form_row(form.roles, {
                                'label_attr': {
                                    'class': 'form-label fw-bold'
                                },
                                'row_attr': {
                                    'class': 'mb-3'
                                }
                            }) }}
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <div>
                            <a href="{{ path('app_user_copie_index') }}" class="btn btn-secondary me-2">
                                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                            </a>
                            {{ include('user_copie/_delete_form.html.twig') }}
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/js/form-validation.js"></script>
