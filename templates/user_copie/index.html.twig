{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs (Copie){% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
                <h1 class="h4 mb-0"><i class="fas fa-users me-2"></i>Liste des utilisateurs (Copie)</h1>
                <a href="{{ path('app_user_copie_new') }}" class="btn btn-light">
                    <i class="fas fa-plus me-2"></i>Nouvel utilisateur
                </a>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="px-4 py-3">ID</th>
                                <th class="px-4 py-3">Email</th>
                                <th class="px-4 py-3">Rôles</th>
                                <th class="px-4 py-3">Statut</th>
                                <th class="px-4 py-3 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td class="px-4 py-3">{{ user.id }}</td>
                                <td class="px-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-user-circle text-primary me-2"></i>
                                        {{ user.email }}
                                    </div>
                                </td>
                                <td class="px-4 py-3">
                                    {% for role in user.roles %}
                                        {% if role != 'ROLE_USER' or user.roles|length == 1 %}
                                            <span class="badge bg-primary rounded-pill me-1">{{ role|replace({'ROLE_': ''}) }}</span>
                                        {% endif %}
                                    {% endfor %}
                                </td>
                                <td class="px-4 py-3">
                                    {% if user.isVerified %}
                                        <span class="badge bg-success rounded-pill"><i class="fas fa-check me-1"></i>Vérifié</span>
                                    {% else %}
                                        <span class="badge bg-warning rounded-pill"><i class="fas fa-clock me-1"></i>Non vérifié</span>
                                        <a href="{{ path('app_user_copie_resend_verification', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary ms-2">
                                            <i class="fas fa-paper-plane"></i>
                                        </a>
                                    {% endif %}
                                </td>
                                <td class="px-4 py-3 text-end">
                                    <div class="btn-group">
                                        <a href="{{ path('app_user_copie_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_user_copie_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center py-4">Aucun utilisateur trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div class="card-footer bg-light py-3">
                <div class="d-flex justify-content-center">
                    {{ knp_pagination_render(users) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}