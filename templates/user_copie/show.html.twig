{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur (Copie){% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white py-3">
                <h1 class="h4 mb-0"><i class="fas fa-user me-2"></i>Détails de l'utilisateur</h1>
            </div>
            <div class="card-body p-4">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="bg-light" style="width: 200px;">ID</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Rôles</th>
                            <td>
                                {% for role in user.roles %}
                                    {% if role != 'ROLE_USER' or user.roles|length == 1 %}
                                        <span class="badge bg-primary rounded-pill me-1">{{ role|replace({'ROLE_': ''}) }}</span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                        </tr>
                        <tr>
                            <th class="bg-light">Statut</th>
                            <td>
                                {% if user.isVerified %}
                                    <span class="badge bg-success rounded-pill"><i class="fas fa-check me-1"></i>Vérifié</span>
                                {% else %}
                                    <span class="badge bg-warning rounded-pill"><i class="fas fa-clock me-1"></i>Non vérifié</span>
                                    <a href="{{ path('app_user_copie_resend_verification', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary ms-2">
                                        <i class="fas fa-paper-plane me-1"></i>Renvoyer l'email
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_user_copie_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                    </a>
                    <div>
                        <a href="{{ path('app_user_copie_edit', {'id': user.id}) }}" class="btn btn-primary me-2">
                            <i class="fas fa-edit me-2"></i>Modifier
                        </a>
                        {{ include('user_copie/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}