{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="py-4">
    <div class="card border-0 rounded-4 shadow-sm">
        <div class="card-body p-4">
            <div class="d-flex align-items-center mb-4">
                <div class="bg-primary rounded-circle p-3 me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                    <i class="fas fa-user text-white"></i>
                </div>
                <div>
                    <h4 class="mb-0">Mon profil</h4>
                    <p class="text-muted mb-0">Informations de compte</p>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item px-0">
                            <span class="text-muted">Email</span>
                            <div class="fw-semibold">{{ app.user.email }}</div>
                        </div>
                        <div class="list-group-item px-0">
                            <span class="text-muted">Rôles</span>
                            <div class="fw-semibold">{{ app.user.roles|join(', ') }}</div>
                        </div>
                        <div class="list-group-item px-0">
                            <span class="text-muted">Vérification email</span>
                            <div class="fw-semibold">{{ app.user.isVerified ? 'Vérifié' : 'Non vérifié' }}</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="bg-light rounded-4 p-4 h-100 d-flex flex-column justify-content-between">
                        <p class="text-muted mb-3">Gérez votre compte et vos préférences.</p>
                        <div class="d-flex gap-2">
                            <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">
                                <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                            </a>
                            <a href="{{ path('app_home') }}" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Accueil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <p class="text-muted small">Pour modifier vos informations, contactez un administrateur.</p>
    </div>
</div>
{% endblock %}