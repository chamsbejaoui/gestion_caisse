        doc.rect(15, yPos - 5, 180, 25, 'FD');

        doc.setFontSize(14);
        doc.setFont('helvetica', 'bold');
        doc.setTextColor(102, 126, 234);
        doc.text('ℹ️  INFORMATIONS GENERALES', 20, yPos + 5);

        doc.setFontSize(10);
        doc.setTextColor(0, 0, 0);
        doc.setFont('helvetica', 'normal');
        doc.text(`Periode d'analyse: ${periodeActive}`, 20, yPos + 12);
        doc.text(`Date de generation: ${currentDate.toLocaleDateString('fr-FR')} a ${currentDate.toLocaleTimeString('fr-FR')}`, 20, yPos + 18);

        yPos += 35;

        // === SECTION INDICATEURS CLÉS ===
        doc.setFillColor(40, 167, 69);
        doc.rect(15, yPos - 5, 180, 8, 'F');

        doc.setTextColor(255, 255, 255);
        doc.setFontSize(14);
        doc.setFont('helvetica', 'bold');
        doc.text('INDICATEURS CLES DE PERFORMANCE', 20, yPos);

        yPos += 15;
        doc.setTextColor(0, 0, 0);
        doc.setFont('helvetica', 'normal');

        // KPI en colonnes avec calculs avancés
        const soldeNum = parseFloat(soldeValue.replace(/[^\d.-]/g, '')) || 0;
        const alimentationsNum = parseFloat(alimentationsValue.replace(/[^\d.-]/g, '')) || 0;
        const depensesNum = parseFloat(depensesValue.replace(/[^\d.-]/g, '')) || 0;
        const soldeNetNum = alimentationsNum - depensesNum;

        // Affichage des KPI
        doc.setFontSize(11);
        doc.text('Solde de Caisse: ' + soldeValue + ' TND', 20, yPos);
        yPos += 8;
        doc.text('Total Alimentations: ' + alimentationsValue + ' TND', 20, yPos);
        yPos += 8;
        doc.text('Total Depenses: ' + depensesValue + ' TND', 20, yPos);
        yPos += 8;
        doc.text('Solde Net: ' + soldeNetValue + ' TND', 20, yPos);
        yPos += 15;

        // Ratios et analyses
        const ratioDepensesAlimentations = alimentationsNum > 0 ? (depensesNum / alimentationsNum * 100) : 0;
        const tauxEconomie = alimentationsNum > 0 ? (soldeNetNum / alimentationsNum * 100) : 0;

        doc.setFont('helvetica', 'bold');
        doc.text('RATIOS FINANCIERS:', 20, yPos);
        yPos += 10;
        doc.setFont('helvetica', 'normal');
        doc.text('Ratio Depenses/Alimentations: ' + ratioDepensesAlimentations.toFixed(1) + '%', 25, yPos);
        yPos += 8;
        doc.text('Taux d\'economie: ' + tauxEconomie.toFixed(1) + '%', 25, yPos);

        // Pied de page
        doc.setFontSize(8);
        doc.setTextColor(128, 128, 128);
        doc.text('Document confidentiel - Systeme de Gestion de Caisse', 20, 280);
        doc.text('Genere automatiquement le ' + currentDate.toLocaleDateString('fr-FR'), 20, 285);

        // Sauvegarde du PDF
        const fileName = `tableau-bord-financier-${new Date().toISOString().split('T')[0]}.pdf`;
        console.log('Saving enhanced PDF as:', fileName);
        doc.save(fileName);
        console.log('Enhanced PDF saved successfully');

    } catch (error) {
        console.error('Error generating PDF:', error);
        alert('Erreur lors de la génération du PDF: ' + error.message);
    }
}

// Export Excel amélioré avec analyses détaillées
function generateExcelReport() {
    console.log('Starting enhanced Excel generation...');

    // Récupération des éléments KPI avec vérification de null
    const soldeElement = document.querySelector('.primary-card .stats-value');
    const alimentationsElement = document.querySelector('.success-card .stats-value');
    const depensesElement = document.querySelector('.danger-card .stats-value');
    const soldeNetElement = document.querySelector('.info-card .stats-value, .warning-card .stats-value');

    // Récupération de la période
    const periodeChecked = document.querySelector('.period-selector input[type="radio"]:checked');
    const periodeValue = periodeChecked ? periodeChecked.getAttribute('data-periode') || 'mois' : 'mois';
    const periodeTexts = {
        'jour': 'Quotidienne',
        'mois': 'Mensuelle',
        'annee': 'Annuelle'
    };

    const wb = XLSX.utils.book_new();
    wb.Props = {
        Title: "Tableau de Bord Financier Complet",
        Subject: "Analyse Détaillée des Données Financières",
        Author: "Système de Gestion de Caisse",
        CreatedDate: new Date()
    };

    // === FEUILLE 1: RÉSUMÉ EXÉCUTIF ===
    const soldeValue = soldeElement ? soldeElement.textContent.replace(/\s/g, '') : '0';
    const alimentationsValue = alimentationsElement ? alimentationsElement.textContent.replace(/\s/g, '') : '0';
    const depensesValue = depensesElement ? depensesElement.textContent.replace(/\s/g, '') : '0';
    const soldeNetValue = soldeNetElement ? soldeNetElement.textContent.replace(/\s/g, '') : '0';

    // Calculs statistiques avancés
    const soldeNum = parseFloat(soldeValue) || 0;
    const alimentationsNum = parseFloat(alimentationsValue) || 0;
    const depensesNum = parseFloat(depensesValue) || 0;
    const soldeNetNum = alimentationsNum - depensesNum;

    const ratioDepensesAlimentations = alimentationsNum > 0 ? (depensesNum / alimentationsNum * 100) : 0;
    const tauxEconomie = alimentationsNum > 0 ? (soldeNetNum / alimentationsNum * 100) : 0;

    const resumeData = [
        ['🏦 TABLEAU DE BORD FINANCIER COMPLET'],
        [''],
        ['📅 Informations Générales'],
        ['Date de génération:', new Date().toLocaleDateString('fr-FR')],
        ['Heure de génération:', new Date().toLocaleTimeString('fr-FR')],
        ['Période d\'analyse:', periodeTexts[periodeValue] || 'Mensuelle'],
        [''],
        ['💰 INDICATEURS CLÉS'],
        ['Indicateur', 'Valeur (TND)', 'Statut'],
        ['Solde de Caisse', soldeValue, soldeNum > 0 ? '✅ Positif' : soldeNum < 0 ? '❌ Négatif' : '⚠️ Neutre'],
        ['Total Alimentations', alimentationsValue, '📈 Entrées'],
        ['Total Dépenses', depensesValue, '📉 Sorties'],
        ['Solde Net', soldeNetValue, soldeNetNum > 0 ? '✅ Bénéfice' : soldeNetNum < 0 ? '❌ Déficit' : '⚠️ Équilibre'],
        [''],
        ['📊 RATIOS ET ANALYSES'],
        ['Métrique', 'Valeur', 'Interprétation'],
        ['Ratio Dépenses/Alimentations', ratioDepensesAlimentations.toFixed(1) + '%', ratioDepensesAlimentations < 80 ? '✅ Bon' : ratioDepensesAlimentations < 100 ? '⚠️ Attention' : '❌ Critique'],
        ['Taux d\'économie', tauxEconomie.toFixed(1) + '%', tauxEconomie > 20 ? '✅ Excellent' : tauxEconomie > 0 ? '⚠️ Correct' : '❌ Déficitaire'],
        [''],
        ['🎯 RECOMMANDATIONS'],
        ['Évaluation globale:', soldeNetNum > 0 ? '✅ Situation saine' : soldeNetNum === 0 ? '⚠️ Situation équilibrée' : '❌ Situation critique'],
        ['Action prioritaire:', soldeNetNum > 0 ? 'Maintenir la surveillance' : soldeNetNum === 0 ? 'Optimiser les coûts' : 'Réduire les dépenses urgentes']
    ];

    const resumeWS = XLSX.utils.aoa_to_sheet(resumeData);

    // Mise en forme de la feuille résumé
    resumeWS['!cols'] = [{ wch: 30 }, { wch: 20 }, { wch: 25 }];
    resumeWS['!merges'] = [
        { s: { r: 0, c: 0 }, e: { r: 0, c: 2 } }, // Titre principal
        { s: { r: 2, c: 0 }, e: { r: 2, c: 2 } }, // Section infos générales
        { s: { r: 7, c: 0 }, e: { r: 7, c: 2 } }, // Section indicateurs
        { s: { r: 14, c: 0 }, e: { r: 14, c: 2 } }, // Section ratios
        { s: { r: 19, c: 0 }, e: { r: 19, c: 2 } }  // Section recommandations
    ];

    // === FEUILLE 2: ÉVOLUTION DES ALIMENTATIONS ===
    const alimentationsData = window.alimentationsChart ? window.alimentationsChart.data : { labels: [], datasets: [{ data: [] }] };
    const alimentationsDetailData = [
        ['📈 ÉVOLUTION DES ALIMENTATIONS'],
        [''],
        ['Période', 'Montant (TND)', 'Pourcentage du Total', 'Tendance'],
        ...alimentationsData.labels.map((label, i) => {
            const value = parseFloat(alimentationsData.datasets[0].data[i]) || 0;
            const percentage = alimentationsNum > 0 ? (value / alimentationsNum * 100).toFixed(1) : '0';
            const prevValue = i > 0 ? parseFloat(alimentationsData.datasets[0].data[i-1]) || 0 : value;
            return [label, value.toFixed(3), percentage, trend];
        })
    ];

    const alimentationsWS = XLSX.utils.aoa_to_sheet(alimentationsDetailData);
    alimentationsWS['!cols'] = [{ wch: 15 }, { wch: 15 }, { wch: 18 }, { wch: 15 }];

    // === FEUILLE 3: ÉVOLUTION DES DÉPENSES ===
    const depensesData = window.depensesChart ? window.depensesChart.data : { labels: [], datasets: [{ data: [] }] };
    const depensesDetailData = [
        ['📉 ÉVOLUTION DES DÉPENSES'],
        [''],
        ['Période', 'Montant (TND)', 'Pourcentage du Total', 'Tendance'],
        ...depensesData.labels.map((label, i) => {
            const value = parseFloat(depensesData.datasets[0].data[i]) || 0;
            const percentage = depensesNum > 0 ? (value / depensesNum * 100).toFixed(1) : '0';
            const prevValue = i > 0 ? parseFloat(depensesData.datasets[0].data[i-1]) || 0 : value;
            const trend = value > prevValue ? '📈 Hausse' : value < prevValue ? '📉 Baisse' : '➡️ Stable';
            return [label, value.toFixed(3), percentage + '%', trend];
        })
    ];

    const depensesWS = XLSX.utils.aoa_to_sheet(depensesDetailData);
    depensesWS['!cols'] = [{ wch: 15 }, { wch: 15 }, { wch: 18 }, { wch: 15 }];

    // === FEUILLE 4: COMPARAISON DÉTAILLÉE ===
    const comparisonData = window.comparisonChart ? window.comparisonChart.data : { labels: [], datasets: [{ data: [] }, { data: [] }] };
    const comparisonDetailData = [
        ['⚖️ COMPARAISON ALIMENTATIONS VS DÉPENSES'],
        [''],
        ['Période', 'Alimentations (TND)', 'Dépenses (TND)', 'Solde Net (TND)', 'Ratio D/A (%)', 'Statut', 'Recommandation'],
        ...comparisonData.labels.map((label, i) => {
            const alimentations = parseFloat(comparisonData.datasets[0].data[i]) || 0;
            const depenses = parseFloat(comparisonData.datasets[1].data[i]) || 0;
            const soldeNet = alimentations - depenses;
            const ratio = alimentations > 0 ? (depenses / alimentations * 100).toFixed(1) : '0';
            const statut = soldeNet >= 0 ? '✅ Bénéfice' : '❌ Déficit';
            const recommandation = soldeNet >= 0 ? 'Maintenir' : 'Optimiser';
            return [label, alimentations.toFixed(3), depenses.toFixed(3), soldeNet.toFixed(3), ratio + '%', statut, recommandation];
        })
    ];

    const comparisonWS = XLSX.utils.aoa_to_sheet(comparisonDetailData);

    // === FEUILLE 5: ANALYSE AVANCÉE ===
    const analyseData = [
        ['🔍 ANALYSE FINANCIÈRE AVANCÉE'],
        [''],
        ['MÉTRIQUES CALCULÉES'],
        ['Métrique', 'Valeur', 'Seuil Optimal', 'Évaluation'],
        ['Ratio Dépenses/Alimentations', ratioDepensesAlimentations.toFixed(1) + '%', '< 80%', ratioDepensesAlimentations < 80 ? '✅ Excellent' : ratioDepensesAlimentations < 100 ? '⚠️ Acceptable' : '❌ Critique'],
        ['Taux d\'économie', tauxEconomie.toFixed(1) + '%', '> 20%', tauxEconomie > 20 ? '✅ Excellent' : tauxEconomie > 0 ? '⚠️ Correct' : '❌ Déficitaire'],
        ['Solde Net/Solde Caisse', soldeNum > 0 ? (soldeNetNum / soldeNum * 100).toFixed(1) + '%' : 'N/A', '> 0%', soldeNetNum > 0 ? '✅ Positif' : '❌ Négatif'],
        [''],
        ['PRÉVISIONS ET TENDANCES'],
        ['Indicateur', 'Tendance', 'Prévision'],
        ['Évolution générale', soldeNetNum > 0 ? '📈 Positive' : soldeNetNum < 0 ? '📉 Négative' : '➡️ Stable', soldeNetNum > 0 ? 'Croissance continue' : 'Amélioration nécessaire'],
        ['Recommandation prioritaire', '', soldeNetNum > 0 ? 'Maintenir la performance' : 'Réduire les dépenses'],
        [''],
        ['ALERTES ET ACTIONS'],
        ['Type d\'alerte', 'Statut', 'Action recommandée'],
        ['Solde critique', soldeNum < 1000 ? '🚨 Critique' : soldeNum < 5000 ? '⚠️ Attention' : '✅ Normal', soldeNum < 1000 ? 'Alimentation urgente' : 'Surveillance continue'],
        ['Dépenses excessives', ratioDepensesAlimentations > 100 ? '🚨 Critique' : ratioDepensesAlimentations > 80 ? '⚠️ Attention' : '✅ Normal', ratioDepensesAlimentations > 100 ? 'Réduction immédiate' : 'Optimisation continue']
    ];

    const analyseWS = XLSX.utils.aoa_to_sheet(analyseData);

    // Configuration des colonnes pour toutes les feuilles
    resumeWS['!cols'] = [{ wch: 30 }, { wch: 20 }, { wch: 25 }];
    alimentationsWS['!cols'] = [{ wch: 15 }, { wch: 15 }, { wch: 18 }, { wch: 15 }];
    depensesWS['!cols'] = [{ wch: 15 }, { wch: 15 }, { wch: 18 }, { wch: 15 }];
    comparisonWS['!cols'] = [{ wch: 12 }, { wch: 15 }, { wch: 15 }, { wch: 15 }, { wch: 12 }, { wch: 12 }, { wch: 15 }];
    analyseWS['!cols'] = [{ wch: 25 }, { wch: 15 }, { wch: 20 }];

    // Ajout des feuilles au classeur
    XLSX.utils.book_append_sheet(wb, resumeWS, '📊 Résumé Exécutif');
    XLSX.utils.book_append_sheet(wb, alimentationsWS, '📈 Alimentations');
    XLSX.utils.book_append_sheet(wb, depensesWS, '📉 Dépenses');
    XLSX.utils.book_append_sheet(wb, comparisonWS, '⚖️ Comparaison');
    XLSX.utils.book_append_sheet(wb, analyseWS, '🔍 Analyse Avancée');

    // Sauvegarde avec nom de fichier horodaté
    const fileName = `tableau-bord-financier-complet-${new Date().toISOString().split('T')[0]}.xlsx`;
    console.log('Saving enhanced Excel as:', fileName);
    XLSX.writeFile(wb, fileName);
    console.log('Enhanced Excel saved successfully');
}

