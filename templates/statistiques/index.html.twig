        // === RÉCUPÉRATION DES DONNÉES ===
        console.log('Retrieving KPI values...');
        const soldeElement = document.querySelector('.primary-card .stats-value');
        const alimentationsElement = document.querySelector('.success-card .stats-value');
        const depensesElement = document.querySelector('.danger-card .stats-value');
        const soldeNetElement = document.querySelector('.info-card .stats-value, .warning-card .stats-value');

        const soldeValue = soldeElement ? soldeElement.textContent.trim() : 'N/A';
        const alimentationsValue = alimentationsElement ? alimentationsElement.textContent.trim() : 'N/A';
        const depensesValue = depensesElement ? depensesElement.textContent.trim() : 'N/A';
        const soldeNetValue = soldeNetElement ? soldeNetElement.textContent.trim() : 'N/A';

        // Récupération de la période active
