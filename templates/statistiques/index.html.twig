        };
        const periodeActive = periodeTexts[periodeValue] || 'Mensuelle (par mois)';

        console.log('Data retrieved:', { soldeValue, alimentationsValue, depensesValue, soldeNetValue, periodeActive });

        // === SECTION INFORMATIONS GÉNÉRALES ===
        doc.setTextColor(0, 0, 0);
