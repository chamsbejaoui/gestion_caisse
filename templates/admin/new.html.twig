{% extends 'base.html.twig' %}

{% block title %}Nouvel utilisateur{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
                        <h1 class="h4 mb-0"><i class="fas fa-user-plus me-2"></i>Créer un nouvel utilisateur</h1>
                        <a href="{{ path('app_admin_index') }}" class="btn btn-light">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                        </a>
                    </div>

                    <div class="card-body p-4">
                        {{ include('admin/_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Validation côté client simple et efficace
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            if (!form) return;

            // Validation du mot de passe en temps réel
            const passwordInput = form.querySelector('input[type="password"]');
            if (passwordInput) {
                passwordInput.addEventListener('input', function() {
                    const value = this.value;
                    if (value.length > 0 && value.length < 6) {
                        this.setCustomValidity('Le mot de passe doit contenir au moins 6 caractères');
                    } else if (value.length > 0 && !/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).+$/.test(value)) {
                        this.setCustomValidity('Le mot de passe doit contenir au moins une minuscule, une majuscule et un chiffre');
                    } else {
                        this.setCustomValidity('');
                    }
                });
            }

            // Validation des rôles en temps réel
            const roleCheckboxes = form.querySelectorAll('input[type="checkbox"][name*="roles"]');
            roleCheckboxes.forEach(function(checkbox) {
                checkbox.addEventListener('change', function() {
                    const checkedRoles = form.querySelectorAll('input[type="checkbox"][name*="roles"]:checked');
                    if (checkedRoles.length === 0) {
                        roleCheckboxes.forEach(cb => cb.setCustomValidity('Veuillez sélectionner au moins un rôle.'));
                    } else {
                        roleCheckboxes.forEach(cb => cb.setCustomValidity(''));
                    }
                });
            });
        });
    </script>
{% endblock %}
