{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Détails de l'utilisateur</h1>
            <div class="btn-group" role="group">
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour à la liste</a>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Informations utilisateur</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">ID</div>
                    <div class="col-md-9">{{ user.id }}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Email</div>
                    <div class="col-md-9">{{ user.email }}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3 fw-bold">Rôles</div>
                    <div class="col-md-9">
                        {% for role in user.roles %}
                            {% if role != 'ROLE_USER' or user.roles|length == 1 %}
                                <span class="badge bg-primary me-1">{{ role|replace({'ROLE_': ''}) }}</span>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="card-footer">
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
