        <div class="card-header">
            <h5 class="mb-0">Informations utilisateur</h5>
        </div>
        <div class="card-body">
            <div class="mb-3">
                {{ form_label(form.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>
            
            <div class="mb-3">
                {{ form_label(form.roles, 'RÃ´les utilisateur', {'label_attr': {'class': 'form-label'}}) }}
