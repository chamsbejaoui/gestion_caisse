{{ form_start(form) }}
<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="mb-4">
            <label class="form-label fw-bold">
                <i class="fas fa-envelope me-2 text-primary"></i>Adresse email
            </label>
            {{ form_widget(form.email, {
                'attr': {
                    'class': 'form-control form-control-lg',
                    'placeholder': 'Entrez l\'adresse email'
                }
            }) }}
            {{ form_errors(form.email) }}
        </div>
        
        <div class="mb-4">
            <label class="form-label fw-bold">
                <i class="fas fa-user-tag me-2 text-primary"></i>RÃ´les utilisateur
            </label>
            <div class="d-flex flex-wrap gap-3">
                {{ form_widget(form.roles, {
                    'attr': {
                        'class': 'form-check-input me-2'
                    }
                }) }}
            </div>
            {{ form_errors(form.roles) }}
        </div>
        
        <div class="mb-4">
            <label class="form-label fw-bold">
                <i class="fas fa-key me-2 text-primary"></i>Mot de passe
            </label>
            {{ form_widget(form.plainPassword, {
                'attr': {
                    'class': 'form-control form-control-lg',
                    'placeholder': 'Entrez le mot de passe'
                }
            }) }}
            {{ form_errors(form.plainPassword) }}
        </div>
    </div>
    <div class="card-footer bg-light text-end py-3">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-save me-2"></i>{{ button_label|default('Enregistrer') }}
        </button>
    </div>
</div>
{{ form_end(form) }}
