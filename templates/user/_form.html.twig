{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
<div class="container py-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-primary text-white py-3">
            <h1 class="h4 mb-0">
                <i class="fas {{ app.current_route == 'app_user_edit' ? 'fa-user-edit' : 'fa-user-plus' }} me-2"></i>
                {{ app.current_route == 'app_user_edit' ? 'Modifier l\'utilisateur' : 'Créer un nouvel utilisateur' }}
            </h1>
        </div>
        <div class="card-body p-4">
            <div class="row g-3">
                <div class="col-12">
                    {{ form_row(form.email, {
                        'attr': {
                            'class': 'form-control form-control-lg',
                            'placeholder': 'Adresse email'
                        },
                        'label_attr': {
                            'class': 'form-label fw-bold'
                        },
                        'help': 'L\'adresse email servira d\'identifiant de connexion'
                    }) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.plainPassword, {
                        'attr': {
                            'class': 'form-control form-control-lg',
                            'placeholder': 'Mot de passe'
                        },
                        'label_attr': {
                            'class': 'form-label fw-bold'
                        },
                        'help': 'Le mot de passe doit contenir au moins 8 caractères avec au moins une minuscule, une majuscule et un chiffre',
                        'required': app.current_route != 'app_user_edit'
                    }) }}
                </div>

                <div class="col-12">
                    {{ form_row(form.roles, {
                        'label_attr': {
                            'class': 'form-label fw-bold'
                        },
                        'row_attr': {
                            'class': 'mb-3'
                        },
                        'help': 'Sélectionnez un ou plusieurs rôles pour cet utilisateur'
                    }) }}
                </div>
            </div>
        </div>
        
        <div class="card-footer bg-light text-end py-3">
            <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-2"></i> Retour à la liste
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i> {{ button_label|default('Enregistrer') }}
            </button>
        </div>
    </div>
</div>
{{ form_end(form) }}