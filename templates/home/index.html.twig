{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white py-3">
                    <h1 class="h4 mb-0"><i class="fas fa-home me-2"></i>Tableau de bord</h1>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info border-0 rounded-3 shadow-sm">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user-circle fa-2x me-3"></i>
                            <div>
                                <h5 class="mb-1">Bienvenue!</h5>
                                <p class="mb-0">Vous êtes connecté en tant que <strong>{{ app.user.email }}</strong></p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row g-4 mt-3">
                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm hover-card">
                                <div class="card-body text-center p-4">
                                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle p-3 mb-3 mx-auto" style="width: 60px; height: 60px;">
                                        <i class="fas fa-user-circle fa-2x"></i>
                                    </div>
                                    <h5 class="card-title">Mon profil</h5>
                                    <p class="card-text text-muted">Gérez vos informations personnelles et vos préférences</p>
                                    <a href="#" class="btn btn-outline-primary mt-3 w-100">
                                        <i class="fas fa-edit me-2"></i>Modifier le profil
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm hover-card">
                                <div class="card-body text-center p-4">
                                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle p-3 mb-3 mx-auto" style="width: 60px; height: 60px;">
                                        <i class="fas fa-cog fa-2x"></i>
                                    </div>
                                    <h5 class="card-title">Paramètres</h5>
                                    <p class="card-text text-muted">Personnalisez les paramètres de votre compte</p>
                                    <a href="#" class="btn btn-outline-primary mt-3 w-100">
                                        <i class="fas fa-sliders-h me-2"></i>Configurer
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light text-center py-3">
                    <a href="{{ path('app_logout') }}" class="btn btn-danger">
                        <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.hover-card {
    transition: transform 0.2s ease-in-out;
}
.hover-card:hover {
    transform: translateY(-5px);
}
.feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
}
</style>
{% endblock %}