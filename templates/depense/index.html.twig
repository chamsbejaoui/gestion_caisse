{% extends 'base.html.twig' %}

{% block title %}Liste des Dépenses{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
                <h1 class="h4 mb-0"><i class="fas fa-money-bill-wave me-2"></i>Liste des Dépenses</h1>
                <div>
                    <a href="{{ path('app_depense_export') }}" class="btn btn-light me-2" title="Options d'exportation">
                        <i class="fas fa-file-export me-2"></i>Options d'exportation
                    </a>
                    <a href="{{ path('app_depense_new') }}" class="btn btn-light">
                        <i class="fas fa-plus-circle me-2"></i>Nouvelle Dépense
                    </a>
                </div>
            </div>

            <div class="card-body">
                <div class="search-form mb-4">
                    {{ form_start(searchForm) }}
                    <div class="row g-3">
                        <div class="col-md-2">
                            {{ form_row(searchForm.montantMin) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_row(searchForm.montantMax) }}
                        </div>
                        <div class="col-md-3">
                            {{ form_row(searchForm.description) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_row(searchForm.dateMin) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_row(searchForm.dateMax) }}
                        </div>
                        <div class="col-md-1 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    {{ form_end(searchForm) }}
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="px-4 py-3">ID</th>
<th class="px-4 py-3">Montant</th>
<th class="px-4 py-3">Description</th>
<th class="px-4 py-3">Date d'Action</th>
<th class="px-4 py-3">Date de Création</th>
<th class="px-4 py-3 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for depense in depenses %}
                            <tr>
                                <td class="px-4 py-3">{{ depense.id }}</td>
<td class="px-4 py-3">
    <span class="badge bg-success rounded-pill">
        <i class="fas fa-coins me-1"></i>
        {{ depense.montant }} DT
    </span>
</td>
<td class="px-4 py-3">
    <i class="fas fa-info-circle text-primary me-2"></i>
    {{ depense.description }}
</td>
<td class="px-4 py-3">
    <i class="fas fa-calendar-alt text-info me-2"></i>
    {{ depense.dateAction ? depense.dateAction|date('d/m/Y H:i') : '' }}
</td>
<td class="px-4 py-3">
    <i class="fas fa-clock text-warning me-2"></i>
    {{ depense.createdAt ? depense.createdAt|date('d/m/Y H:i') : '' }}
</td>
<td class="px-4 py-3 text-end">
    <div class="btn-group" role="group">
        <a href="{{ path('app_depense_show', {'id': depense.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
            <i class="fas fa-eye"></i>
        </a>
        <a href="{{ path('app_depense_edit', {'id': depense.id}) }}" class="btn btn-sm btn-outline-warning" title="Modifier">
            <i class="fas fa-edit"></i>
        </a>
    </div>
</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p class="h5">Aucune dépense trouvée</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div class="text-muted">
                        Total : {{ depenses.getTotalItemCount }} dépense(s)
                    </div>
                    <div class="navigation">
                        {{ knp_pagination_render(depenses, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
