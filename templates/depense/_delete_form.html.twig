<form method="post" action="{{ path('app_depense_delete', {'id': depense.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette dépense ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ depense.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt me-2"></i>Supprimer
    </button>
</form>
