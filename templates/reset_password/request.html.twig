{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white py-3">
                    <h1 class="h4 mb-0"><i class="fas fa-key me-2"></i>Réinitialisation du mot de passe</h1>
                </div>

                <div class="card-body p-4">
                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            {{ flash_error }}
                        </div>
                    {% endfor %}

                    <div class="alert alert-info d-flex align-items-center mb-4">
                        <i class="fas fa-info-circle me-3 fa-lg"></i>
                        <div>
                            <h5 class="alert-heading mb-1">Comment réinitialiser votre mot de passe ?</h5>
                            <p class="mb-0">Entrez votre adresse email ci-dessous. Nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>
                        </div>
                    </div>

                    {{ form_start(requestForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-4">
                            {{ form_label(requestForm.email, 'Adresse email', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-envelope text-primary"></i>
                                </span>
                                {{ form_widget(requestForm.email, {
                                    'attr': {
                                        'class': 'form-control form-control-lg',
                                        'placeholder': 'Entrez votre adresse email'
                                    }
                                }) }}
                            </div>
                            {{ form_errors(requestForm.email) }}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Envoyer le lien de réinitialisation
                            </button>
                        </div>
                    {{ form_end(requestForm) }}
                </div>

                <div class="card-footer bg-light text-center py-3">
                    <a href="{{ path('app_login') }}" class="btn btn-link text-decoration-none">
                        <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
